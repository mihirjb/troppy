<h1>All the payvouchers</h1>
<%if @payvoucher.count == 0 %>
	<p>No payvouchers yet</p>
<% else %>
<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
		<th>Balance Paid</th>
		<th>Total Amount</th>
		<th>Payee</th>
		<th>Paid Date</th>
		<%	if can? :update, @payvoucher %>
		<th>Actions</th>
		<% end %>
		
		</tr>
	</thead>
		<% if @payvoucher.count >0 %>
			<% @payvoucher.each do |t| %>
			<tr>
						<td><%= t.balpaid %></td>
						<td><%= t.totalamnt %></td>	
						<td><%= t.payee %></td>
						<td><%= t.created_at.to_date.strftime('%d-%m-%Y') %></td>
					<%	if can? :update, @payvoucher %>
						<td><%= link_to "Edit", "/payvouchers/#{t.id}/edit" %>/<% end %><%	if can? :destroy, @payvoucher %><%= link_to "Delete", "/payvouchers/#{t.id}", :method => 'DELETE' %></td>
						<% end %>
						
						
					</tr>
					
			<% end %>
		<% end %>	
<% end %>
</table>
