<%= form_for @lr, :html => { :multipart => true } do |f| -%>

<% if @lr.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@lr.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% @lr.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
	<%= f.label :lrno, "Lr Number" %>
	<%= f.text_field :lrno %>
</div>  

<div class="field">
	<%= f.label :party, "Generated for" %>
	  <%= f.select :party, [['Reliance','Reliance'],['Essar','Essar']] %>
</div>

<div class="field">
	<%= f.label :truckno, "Truck number" %>
	<%= f.text_field :truckno %>
</div>

<div class="field">
	<%= f.label :loadweight, "Loading Weight" %>
	<%= f.text_field :loadweight %>
</div>


<div class="field">
	<%= f.label :advance, "Advance Amount" %>
	<%= f.text_field :advance %>
</div>


<div class="field">
<%= f.submit "Add", :disable_with => 'Adding...' %>
</div>
<% end -%>